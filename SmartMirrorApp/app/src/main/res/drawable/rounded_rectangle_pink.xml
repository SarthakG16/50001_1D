<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item
            android:left="2dp"
            android:top="5dp">
                <shape
                    android:shape="rectangle">
                        <gradient
                            android:startColor="@color/black_50"
                            android:endColor="@color/black_80"
                            android:angle="270"/>
                        <corners
                            android:radius = "30dp" />
                </shape>
        </item>

        <item
            android:bottom="2dp">
                <shape
                    android:shape="rectangle">
                        <solid
                            android:color="@color/colorAccentLight" />
                        <corners
                            android:radius = "20dp"/>
                        <padding
                            android:bottom="10dp"
                            android:left="10dp"
                            android:right="10dp"
                            android:top="10dp" />
                </shape>
        </item>
</layer-list>