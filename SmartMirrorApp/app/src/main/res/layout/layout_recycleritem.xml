<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/recycler_layout">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/recyler_item_pdf"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </com.github.barteksc.pdfviewer.PDFView>

    <TextView
        android:id="@+id/recyler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is where the Title will be"
        android:layout_toRightOf="@+id/recyler_item_pdf"
        android:layout_marginLeft="30dp"
        android:textSize="17sp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/recyler_item_pdf"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/recyler_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Category of Poster here"
        android:layout_toRightOf="@+id/recyler_item_pdf"
        android:layout_below="@+id/recyler_item_title"
        android:layout_toEndOf="@+id/recyler_item_pdf"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/recycler_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Name here"
        android:layout_toRightOf="@+id/recyler_item_pdf"
        android:layout_below="@+id/recyler_item_category"
        android:layout_toEndOf="@+id/recyler_item_pdf"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"/>

    

    </RelativeLayout>
</android.support.v7.widget.CardView>